/** @var \Mageplaza\GoogleMaps\Block\Adminhtml\System\Coordinate $block */
$mapApi = $block->helperData->getMapConfig('api_key');
$address = $block->helperData->getMapConfig('location_setting/address');
$btnId = $block->getElement()->getId();
?>
<td id="coordinate-button-label" class="label">
    <label for="<?php echo $btnId; ?>_button"></label>
</td>
<td id="coordinate-button-value" class="value">
    <button style="margin-bottom: 15px;" id="<?php echo $btnId; ?>_button"
            title="<?php echo __("Get GPS coordinates"); ?>"
            type="button" class="primary"
            role="button" aria-disabled="false">
        <span class="ui-button-text">
            <span><?php echo __("Get GPS coordinates"); ?></span>
        </span>
    </button>
</td>
<script>
    require([
        'jquery',
        'mage/translate',
        "https://maps.googleapis.com/maps/api/js?key=<?php echo $mapApi ?>"
    ], function ($, $t) {
        var buttonCoordinate = $('#<?php echo $btnId; ?>_button');
        buttonCoordinate.on('click', function () {
            var address = $('input#mpgooglemaps_map_setting_location_setting_address').val();
            var coordinateBtn = $('#coordinate-button-value');
            $.ajax({
                url: 'https://maps.googleapis.com/maps/api/geocode/json',
                type: 'GET',
                showLoader: true,
                data: {
                    "address": address,
                    "key": '<?php echo $mapApi ?>'
                },
                success: function (response) {
                    switch (response.status) {
                        case 'OVER_QUERY_LIMIT':
                            coordinateBtn.append('<div class="messages"><div class="message message-error error"><div data-ui-id="magento-framework-view-element-messages-0-message-error">' + $t('API Key is incorrect. Please enter the correct one.') + '</div></div></div>');
                            break;
                        case 'ZERO_RESULTS':
                            coordinateBtn.append('<div class="messages"><div class="message message-error error"><div data-ui-id="magento-framework-view-element-messages-0-message-error">' + $t('The address could not be found. Please make sure you enter the real one.') + '</div></div></div>');
                            break;
                        case 'REQUEST_DENIED':
                            coordinateBtn.append('<div class="messages"><div class="message message-error error"><div data-ui-id="magento-framework-view-element-messages-0-message-error">' + $t('The request has been denied.') + '</div></div></div>');
                            break;
                        case 'INVALID_REQUEST':
                            coordinateBtn.append('<div class="messages"><div class="message message-error error"><div data-ui-id="magento-framework-view-element-messages-0-message-error">' + $t('The query (address, components or latitude/longitude) is missing.') + '</div></div></div>');
                            break;
                        case 'UNKNOWN_ERROR':
                            coordinateBtn.append('<div class="messages"><div class="message message-error error"><div data-ui-id="magento-framework-view-element-messages-0-message-error">' + $t('The request could not be processed due to a server error. Please try again.') + '</div></div></div>');
                            break;
                        default:
                            var latitude = response.results[0].geometry.location.lat,
                                longitude = response.results[0].geometry.location.lng,
                                errMessage = $('#coordinate-button-value').find('.messages');
                            errMessage.hide();
                            $('input#mpgooglemaps_map_setting_location_setting_latitude').val(latitude);
                            $('input#mpgooglemaps_map_setting_location_setting_longitude').val(longitude);
                    }
                },
                error: function (jqXHR, error, errorThrown) {
                    if (jqXHR.status && jqXHR.status == 400) {
                        coordinateBtn.append('<div class="messages"><div class="message message-error error"><div data-ui-id="magento-framework-view-element-messages-0-message-error">' + jqXHR.responseText + '</div></div></div>');
                    } else {
                        coordinateBtn.append('<div class="messages"><div class="message message-error error"><div data-ui-id="magento-framework-view-element-messages-0-message-error">' + $t('Something went wrong') + '</div></div></div>');
                    }
                }
            })
        });
    });
</script>